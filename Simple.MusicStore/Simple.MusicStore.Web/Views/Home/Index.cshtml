@model HomePageModel
@{
    ViewData["Title"] = "Home Page";
}
<img src="/img/music_store_logo.png" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form method="post">
    <div class="row">
        <div class="col-10">
            <input type="text" name="search" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
        <input type="hidden" name="page" value="@Model.CurrentPage" />

    </div>
</form>
<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-2">
        <a href="@Url.Action("Index", new { Page = Model.PreviousPage })" class="btn btn-outline-primary">Previous Page</a>
    </div>
    <div class="col-8"></div>
    <div class="col-2">
        <a href="@Url.Action("Index", new { Page = Model.NextPage })" class="btn btn-outline-primary">Next Page</a>
    </div>
</div>
<div class="row">&nbsp;</div>
@if (!Model.Artists.Any())
{
    <p>No records found</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Albums</th>
                @* <th scope="col">Email Address</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model.Artists)
            {
                <tr>
                    <th scope="row">@artist.ArtistId</th>
                    <td>@artist.Name</td>
                    <td>@artist.Album.Count</td>
                    @* <td>@user.EmailAddress</td> *@
                </tr>
            }

        </tbody>
    </table>
}
